.pin
    // Pin Module
    width 10em
    min-height 9em
    margin 1em 0.5em 0.5em 1em
    padding 0
    background-color #fff
    color #eee
    font-size 1em

    &.editable
        box-shadow 0 0 0.5em #0cf
        
        span.delete-pin
            display block
            position absolute
            right 0.5em
            top 0.5em
            height 2em
            width 2em
            padding-top 0.1em
            border 2px solid red
            border-radius 1em
            color red
            text-align center
            line-height 1em
            font-size 0.5em
            font-weight bold
            cursor pointer

    h2
        position absolute
        width 100%
        bottom 0
        margin 0
        padding 0.2em
        background-color rgba(255,255,255,0.9)
        color #333
        font-size 0.8em

    img
        width 100%

    span.delete-pin
        display none



